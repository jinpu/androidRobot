<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/id_ly_top"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#111111"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="小凤凤"
            android:layout_centerInParent="true"
            android:textColor="#00ffff"
            android:textSize="22sp"
            android:gravity="center"
            />
        <ImageButton
            android:id="@+id/id_choose_headimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imbutton"
            android:layout_alignParentRight="true"
            android:background="#111111"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="#222222"
        android:id="@+id/id_ly_bottom"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:id="@+id/id_send_msg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="18sp"

            android:text="发送"
            />
        <EditText
            android:id="@+id/id_input_msg"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#aaaaaa"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/id_send_msg"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <ListView
        android:id="@+id/id_ly_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/id_ly_top"
        android:layout_above="@id/id_ly_bottom"
        android:background="@drawable/bg"
        android:divider="@null"
        android:dividerHeight="3dp">
    </ListView>
</RelativeLayout>
